{
  "ts-node": {
    "files": true,
    "transpileOnly": false
  },
  "compilerOptions": {
    "baseUrl": ".",
    "resolveJsonModule": true,
    "target": "ES2018",
    "module": "CommonJS",
    "moduleResolution": "node",
    "sourceMap": true,
    "lib": ["ES2018", "DOM"],
    "esModuleInterop": true,
    "jsx": "react",
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "types": ["jest", "chrome", "node", "playwright", "./webpack/declarations.d.ts", "firefox-webext-browser"],
    "paths": {
      "@anti-scam/*": ["src/anti-scam/*"],
      "@browser-extension/*": ["src/browser-extension/*"],
      "@data/*": ["src/data/*"],
      "@e-commerce/*": ["src/e-commerce/*"],
      "@shutaf/*": ["src/shutaf/*"],
      "@constants/*": ["src/constants/*"],
      "@utils/*": ["src/utils/*"],
      "@store/*": ["src/store/*"],
      "@pegasus/*": ["src/utils/pegasus/*"],
      "@auth/*": ["src/auth/*"]
    }
  },
  "exclude": ["node_modules", "dist", "webpack", "tools", ".vscode"]
}
